<div class="form_group">
  <label for="title">Title</label>
  <input
    type="text"
    required
    type="text"
    name="title"
    id="title"
    class="form-control"
    value="<%= article.title %>"
    autocomplete="off"
  />
</div>

<div class="form_group">
  <label for="description">Description</label>
  <input
    type="text"
    required
    type="text"
    name="description"
    id="description"
    class="form-control"
    autocomplete="off"
    value="<%= article.description %>"
  />
</div>

<div class="form_group">
  <label for="title">Markdown</label>
  <textarea
    name="markdown"
    id="markdown"
    class="form-control"
    required
    value="<%= article.markdown %>"
    autocomplete="off"
  ></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
